        </VerticalStackLayout>-->
        <Grid>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="20"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="20"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="20"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button
                x:Name="StartCalculationBtn"
                Text="Start Calculation"
                FontAttributes="Bold"
                Margin="40,0,10,10"
                Command="{Binding StartCalculationCommand}"
                HorizontalOptions="Center"
                BackgroundColor="White"
                TextColor="#04046C"
                Grid.Row="11"
                Grid.Column="2"
                Grid.ColumnSpan="2"></Button>
            <Button
                x:Name="ResultCsvBtn"
                Text="Export Results to CSV-File"
                Margin="40,0,10,10"
                HorizontalOptions="Center"
                BackgroundColor="White"
                TextColor="#04046C"
                Grid.Row="12"
                Grid.Column="2"
                Grid.ColumnSpan="2"></Button>
            <Button
                x:Name="CloseBtn"
                Text="Close Model"
                Margin="0,0,10,10"
                HorizontalOptions="Center"
                BackgroundColor="White"
                TextColor="#04046C"
                Grid.Row="11"
                Grid.Column="4"></Button>
            <Button
                x:Name="freeRFEMBtn"
                Text="Close this app and free RFEM"
                Margin="0,0,10,10"
                HorizontalOptions="Center"
                BackgroundColor="White"
                TextColor="#04046C"
                Grid.Row="12"
                Grid.Column="4"></Button>
            <Label
                Text="Geometry"
                TextDecorations="Underline"
                FontSize="18"
                FontAttributes="Bold" 
                HorizontalOptions="End"
                TextColor="{local:GlobalTextColor}"
                Grid.Row="2"
                Grid.Column="2"
                Grid.ColumnSpan="1"></Label>
            <Label
                Text="Vertical Bracing"
                TextDecorations="Underline"
                Margin="0,0,0,10"
                FontSize="18"
                FontAttributes="Bold" 
                HorizontalOptions="Center"
                TextColor="{local:GlobalTextColor}"
                Grid.Row="2"
                Grid.Column="4"></Label>
            <Label
                Text="Frame Height [m]:"
                Margin="0,0,20,10"
                FontSize="{local:GlobalFontSize}"
                HorizontalOptions="End"
                VerticalOptions="Center"
                TextColor="{local:GlobalTextColor}"
                Grid.Row="3"
                Grid.Column="2"></Label>
            <Entry
                x:Name="InputHeight"
                Margin="0,0,0,5"
                Text="{Binding FrameHeight, Mode=OneWayToSource}"
                Grid.Row="3"
                Grid.Column="3"
                WidthRequest="20"
                HeightRequest="5"
                HorizontalOptions="Start"
                BackgroundColor="White"></Entry>
            <Label
                Text="Frame Span [m]:"
                Margin="0,0,20,10"
                FontSize="{local:GlobalFontSize}"
                HorizontalOptions="End"
                VerticalOptions="Center"
                TextColor="{local:GlobalTextColor}"
                Grid.Row="4"
                Grid.Column="2"></Label>
            <Entry
                x:Name="InputSpan"
                Margin="0,0,0,5"
                Text="{Binding FrameSpan, Mode=OneWayToSource}"
                Grid.Row="4"
                Grid.Column="3"
                HorizontalOptions="Start"
                BackgroundColor="White"></Entry>
            <Label
                Text="Distance between Frames [m]:"
                Margin="0,0,20,10"
                FontSize="{local:GlobalFontSize}"
                HorizontalOptions="End"
                VerticalOptions="Center"
                TextColor="White"
                Grid.Row="5"
                Grid.Column="2"></Label>
            <Entry
                x:Name="InputDistance"
                Margin="0,0,0,5"
                Text="{Binding FrameDistance, Mode=OneWayToSource}"
                Grid.Row="5"
                Grid.Column="3"
                HorizontalOptions="Start"
                BackgroundColor="White"></Entry>
            <Label
                Text="Number of Frames:"
                Margin="0,0,20,10"
                FontSize="{local:GlobalFontSize}"
                HorizontalOptions="End"
                VerticalOptions="Center"
                TextColor="{local:GlobalTextColor}"
                Grid.Row="6"
                Grid.Column="2"></Label>
            <Entry
                x:Name="InputFrameNumber"
                Margin="0,0,0,5"
                Text="{Binding FrameNumber, Mode=OneWayToSource}"
                Grid.Row="6"
                Grid.Column="3"
                FontSize="{local:GlobalFontSize}"
                HorizontalOptions="Start"
                BackgroundColor="White"></Entry>
            <Label
                Text="Roof Pitch Angle [°]:"
                Margin="0,0,20,10"
                FontSize="{local:GlobalFontSize}"
                HorizontalOptions="End"
                VerticalOptions="Center"
                TextColor="{local:GlobalTextColor}"
                Grid.Row="7"
                Grid.Column="2"></Label>
            <Entry
                x:Name="InputAngle"
                Margin="0,0,0,5"
                Text="{Binding RoofAngle, Mode=OneWayToSource}"
                Grid.Row="7"
                Grid.Column="3"
                HorizontalOptions="Start"
                BackgroundColor="White"></Entry>
            <Label
                Text="Status:"
                Margin="30,0,0,10"
                FontSize="16"
                FontAttributes="Bold"
                HorizontalOptions="Start"
                TextColor="{local:GlobalTextColor}"
                Grid.Row="14"
                Grid.Column="2"
                Grid.ColumnSpan="2"></Label>
            <Label
                Text="Calculation has not been started yet!"
                Margin="100,0,0,10"
                HorizontalOptions="Start"
                FontSize="16"
                TextColor="{local:GlobalTextColor}"
                Grid.Column="2"
                Grid.ColumnSpan="3"
                Grid.Row="14"></Label>
            <RadioButton
                GroupName="verticalBracing"
                
                Content="Include bracing in every field"
                FontSize="{local:GlobalFontSize}"
                TextColor="{local:GlobalTextColor}"               
                Grid.Row="3"
                Grid.Column="4"
                HorizontalOptions="Start"></RadioButton>
            <RadioButton
                GroupName="verticalBracing"
                Content="Include bracing in every second field"
                FontSize="{local:GlobalFontSize}"
                TextColor="{local:GlobalTextColor}"             
                Grid.Row="4"
                Grid.Column="4"
                HorizontalOptions="Start"></RadioButton>
            <RadioButton
                GroupName="verticalBracing"
                Content="Include bracing only in the end fields"
                FontSize="{local:GlobalFontSize}"
                TextColor="{local:GlobalTextColor}"              
                Grid.Row="5"
                Grid.Column="4"
                HorizontalOptions="Start"></RadioButton>
            <Label
                Text="Horizontal Bracing"
                TextDecorations="Underline"
                Margin="0,0,0,10"
                FontSize="18"
                FontAttributes="Bold" 
                HorizontalOptions="Center"
                TextColor="{local:GlobalTextColor}"
                Grid.Row="6"
                Grid.Column="4"></Label>
            <RadioButton
                GroupName="horizontalBracing"
                Content="Include bracing in every field"
                FontSize="{local:GlobalFontSize}"
                TextColor="{local:GlobalTextColor}"               
                Grid.Row="7"
                Grid.Column="4"
                HorizontalOptions="Start"></RadioButton>
            <RadioButton
                GroupName="horizontalBracing"
                Content="Include bracing in every second field"
                FontSize="{local:GlobalFontSize}"                
                TextColor="{local:GlobalTextColor}"
                Grid.Row="8"
                Grid.Column="4"
                HorizontalOptions="Start"></RadioButton>
            <RadioButton
                GroupName="horizontalBracing"
                Content="Include bracing only in the end fields"
                FontSize="{local:GlobalFontSize}"
                TextColor="{local:GlobalTextColor}"               
                Grid.Row="9"
                Grid.Column="4"
                HorizontalOptions="Start"></RadioButton>
            <Image 
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.Row="11"
                Grid.RowSpan="6"
                Source="logo_white.png"
                WidthRequest="200"
                HeightRequest="200"
                HorizontalOptions="Start"
                Aspect="AspectFill"
                VerticalOptions="EndAndExpand"></Image>            
        </Grid>
    </ScrollView>

</ContentPage>
